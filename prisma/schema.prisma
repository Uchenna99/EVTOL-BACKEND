generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum role {
  USER
  ADMIN
}

enum EvtolModel {
  Lightweight
  Middleweight
  Cruiserweight
  Heavyweight
}

enum EvtolState {
  IDLE
  LOADING
  LOADED
  DELIVERING
  DELIVERED
  RETURNING
}

model User {
  id            Int      @id @unique @default(autoincrement())
  googleId      String?
  firstName     String
  lastName      String
  age           Int
  email         String   @unique
  phoneNumber   String
  region        String
  password      String
  role          role     @default(USER)
  emailVerified Boolean  @default(false)
  otp           String?
  otpExpiry     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Evtol {
  id              Int           @id @unique @default(autoincrement())
  serialNumber    String
  model           EvtolModel
  batteryCapacity Int
  state           EvtolState    @default(IDLE)
  loadedItems     Medications[]
}

model Medications {
  id     Int     @id @unique @default(autoincrement())
  name   String
  weight String
  code   String  @unique
  image  String
  evtol  Evtol[]
}
