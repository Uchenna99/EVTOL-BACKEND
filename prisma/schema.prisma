generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum role {
  USER
  ADMIN
}

enum EvtolModel {
  Lightweight
  Middleweight
  Cruiserweight
  Heavyweight
}

enum EvtolState {
  IDLE
  LOADING
  LOADED
  DELIVERING
  DELIVERED
  RETURNING
}

enum Regions {
  Rumuola
  Rumuigbo
  Rumuokwuta
  Rumuokoro
  Rumudara
  Rumubiakani
  Rumuodumaya
  Rumuogba
}

model Load {
  id            Int         @id @unique @default(autoincrement())
  item          Medications @relation(fields: [medicationsId], references: [id])
  quantity      Int
  medicationsId Int
  Evtol         Evtol?      @relation(fields: [evtolId], references: [id])
  evtolId       Int
}

model Evtol {
  id              Int        @id @unique @default(autoincrement())
  serialNumber    String     @unique
  model           EvtolModel
  batteryCapacity Int        @default(100)
  state           EvtolState @default(IDLE)
  Load            Load[]
}

model User {
  id            Int       @id @unique @default(autoincrement())
  googleId      String?
  firstName     String
  lastName      String
  age           Int
  email         String    @unique
  phoneNumber   String
  region        Regions
  password      String
  role          role      @default(USER)
  emailVerified Boolean   @default(false)
  otp           String?
  otpExpiry     DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Medications {
  id     Int    @id @unique @default(autoincrement())
  name   String
  weight String
  code   String @unique
  image  String
  Load   Load[]
}
